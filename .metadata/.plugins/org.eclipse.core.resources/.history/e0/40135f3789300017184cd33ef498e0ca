public class PTra07_10 {
	public static void main(String[] args) {

		// ※2次元配列を用いています
		String[] array_sub = {"英","国","数","理","社","合計"};
		int sum = 0;
		int[] average = new int[array_sub.length - 1];
		int[][] array_point = {
				{50,70,80,90,60},
				{40,80,100,50,60},
				{100,100,100,100,80}
		};

		System.out.print("\t\t");
		for(int i = 0; i < array_sub.length; i++){
			System.out.print("|" + array_sub[i] + "\t\t");
		}
		System.out.println();
		System.out.println("-----------------------------------------------------------");
		for(int j = 0; j < array_point.length; j++){
			System.out.print(j + "番さん" + "\t");
			int total = 0;
			for(int k = 0; k < array_point[j].length; k++){
				System.out.print("|" + array_point[j][k] + "点" + "\t");
				total += array_point[j][k];
			}
			System.out.print(total + "点");
			System.out.print( "\n");
		}

		/*
		 * 受講生情報をまとめた配列があります。全教科の合計点と教科毎の平均点を算出してください
		 *
		 *			|英		|国		|数		|理		|社		|合計
		 *	-----------------------------------------------------------
		 *	0番さん	|50点	|70点	|80点	|90点	|60点	|350点
		 *	-----------------------------------------------------------
		 *	1番さん	|40点	|80点	|100点	|50点	|60点	|330点
		 *	-----------------------------------------------------------
		 *	2番さん	|100点	|100点	|100点	|100点	|80点	|480点
		 *	-----------------------------------------------------------
		 *	平均	|63点	|83点	|93点	|80点	|66点	|
		 */



	}
}
